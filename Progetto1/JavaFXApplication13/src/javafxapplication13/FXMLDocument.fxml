<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication13.FXMLDocumentController">
   <children>
      <StackPane fx:id="stackPane" layoutX="106.0" prefHeight="600.0" prefWidth="611.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="111.0" text="Inserire OTP">
                     <VBox.margin>
                        <Insets left="250.0" right="250.0" top="200.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="tfOTP">
                     <VBox.margin>
                        <Insets left="250.0" right="250.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="btnSblocca" mnemonicParsing="false" onAction="#sblocca" text="Sblocca">
                     <VBox.margin>
                        <Insets left="250.0" right="250.0" top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Label fx:id="lblErrore" text="Password errata. Riprovare" textFill="#d30f0f00" visible="false">
                     <VBox.margin>
                        <Insets left="250.0" right="250.0" top="10.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children></StackPane>
      <HBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox prefHeight="600.0" prefWidth="243.0" spacing="10.0">
               <children>
                  <MenuBar>
                    <menus>
                      <Menu mnemonicParsing="false" onAction="#apriMenuFile" text="File">
                        <items>
                          <MenuItem fx:id="saveFileMenuItem" mnemonicParsing="false" onAction="#saveFile" text="Salva" />
                              <MenuItem fx:id="ExitMenuButton" mnemonicParsing="false" onAction="#exit" text="Esci" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <Label text="Nome" />
                  <TextField fx:id="tfNome" />
                  <Label text="Cognome" />
                  <TextField fx:id="tfCognome" />
                  <Label text="Numero telefonico" />
                  <TextField fx:id="tfTelefono" />
                  <Button fx:id="btnAggiungi" mnemonicParsing="false" onAction="#aggiungiContatto" text="Aggiungi contatto" />
               </children>
            </VBox>
            <TableView fx:id="mainTable" editable="true" prefHeight="600.0" prefWidth="558.0">
              <columns>
                <TableColumn fx:id="nameClm" onEditCommit="#editName" prefWidth="75.0" text="Nome" />
                <TableColumn fx:id="surnameClm" onEditCommit="#editSurname" prefWidth="75.0" text="Cognome" />
                  <TableColumn fx:id="telClm" onEditCommit="#editTelephone" prefWidth="75.0" text="Numero telefonico" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="menuItemCancella" mnemonicParsing="false" onAction="#cancellaContatto" text="Cancella Contatto" />
                        <MenuItem fx:id="menuItemCopia" mnemonicParsing="false" onAction="#copiaContatto" text="Copia Contatto..." />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>